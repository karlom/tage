    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "types": ["node"],
    "outDir": "./dist-electron",
    "rootDir": ".",
    "target": "ES2020"
  },
  "include": ["vite.config.ts", "electron/main.ts"],
  "exclude": ["electron/preload.ts"]
}

